      background: #ff0000;
    }

    #ingresso {
      margin-top: 30px;
      background: #000;
      padding: 15px;
      white-space: pre;
      font-size: 1.1rem;
      border-radius: 8px;
      line-height: 1.4;
      border: 2px dashed gold;
      user-select: all;
      color: #f00;
      position: relative;
    }

    #btnCopiar {
      margin-top: 10px;
      width: 100%;
      padding: 10px;
      background: #8B0000;
      color: #fff;
      font-weight: bold;
      border: 2px solid #ff0000;
      border-radius: 8px;
      cursor: pointer;
      box-shadow: 0 0 8px #ff0000;
      display: none;
    }

    #btnCopiar:hover {
      background: #A52A2A;
    }

    .qr-code-container {
      text-align: center;
      margin: 15px 0;
    }

    .qr-code {
      background: white;
